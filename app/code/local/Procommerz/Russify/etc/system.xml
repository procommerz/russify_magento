<?xml version="1.0"?>
<config>
    <tabs>
        <procommerz translate="label">
            <label>Procommerz</label>
            <sort_order>1000</sort_order>
            <class>procommerz</class>
        </procommerz>
    </tabs>
    <sections>
        <procommerz>
            <label>Russify Settings</label>
            <tab>procommerz</tab>
            <frontend_type>text</frontend_type>
            <sort_order>9999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General settings</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <russify_enable translate="label">
                            <label>Enable Russify</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </russify_enable>
                        <russify_id translate="label">
                            <label>Russify Id</label>
                            <frontend_type>text</frontend_type>
                            <depends>
                                <russify_enable>1</russify_enable>
                            </depends>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </russify_id>
                        <russify_api translate="label">
                            <label>Russify API Key</label>
                            <frontend_type>text</frontend_type>
                            <depends>
                                <russify_enable>1</russify_enable>
                            </depends>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </russify_api>
                    </fields>
                </general>
            </groups>
        </procommerz>
    </sections>
</config>